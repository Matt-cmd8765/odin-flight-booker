<%= form_with(model: booking, url: new_booking_path), method: :get do |form|%>
  <% form.hidden_field :passengers, value: @passengers%>
  <% @search_flights.each do |flight| %>
    <p>Select This Flight cunt
    <%= radio_button_tag 'flight', flight%>
    </p>
    <div id='flight_info'>
        <p>
        <strong>Departure Airport:</strong>
        <%= flight.departure_airport.code %>
        </p>

        <p>
        <strong>Arrival Airport</strong>
        <%= flight.arrival_airport.code %>
        </p>

        <p>
        <strong>Start Time</strong>
        <%= flight.start %>
        </p>

        <p>
        <strong>Flight Length</strong>
        <%= flight.flight_duration %> hours
        </p>
    </div>
  <% end %>
  <%= form.submit%>
<% end %>
