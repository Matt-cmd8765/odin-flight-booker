<% @search_flights.each do |flight| %>
  <%= form_with url: new_booking_path, method: :get do |f| %>
    <h3>Select Flight</h3>
    <%= f.radio_button :flight_id, flight.id  %>
    <%= f.hidden_field :no_of_passengers, value: params[:passengers]  %>
    <%= f.submit 'Book'%>
  <% end %>
  <div id='flight_info'>
      <p>
      <strong>Departure Airport:</strong>
      <%= flight.departure_airport.code %>
      </p>

      <p>
      <strong>Arrival Airport</strong>
      <%= flight.arrival_airport.code %>
      </p>

      <p>
      <strong>Start Time</strong>
      <%= flight.start %>
      </p>

      <p>
      <strong>Flight Length</strong>
      <%= flight.flight_duration %> hours
      </p>
  </div>
<% end %>
