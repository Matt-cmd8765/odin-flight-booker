<h3>Flight Results</h3>
<div class="d-flex justify-content-center">
  <%= form_with url: new_booking_path, method: :get do |f| %>
  <table class="table table-sm">
    <thead class="table-light">
      <tr>
        <th scope="col">Departure Airport</th>
        <th scope="col">Arrival Airport</th>
        <th scope="col">Start Time</th>
        <th scope="col">Flight Length</th>
        <th scope="col">Book Flight</th>
      </tr>
    </thead>
    <tbody>
      <% @search_flights.each do |flight| %>
          <tr>
            <td><%= flight.departure_airport.code %></td>
            <td><%= flight.arrival_airport.code %></td>
            <td><%= flight.start %></td>
            <td><%= flight.flight_duration %> hours</td>
            <td>
                <%= f.radio_button :flight_id, flight.id, required: true %>
                <%= f.hidden_field :no_of_passengers, value: params[:passengers]  %>
            <% end %>
            </td>
          </tr>
    </tbody>
  </table>
  <%= f.submit 'Book', class:'btn btn-success'%>
  <% end %>
</div>

