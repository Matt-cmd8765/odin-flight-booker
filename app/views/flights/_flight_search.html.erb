<div class="container">
  <%= form_with url: flights_path, method: :get do |form| %>
  <div class="row justify-content-center">
    <div class="col">
      <select name="departure_airport" class="form-select" aria-label="Default select example">
        <option selected disabled>Departure Airport</option>
        <%= options_for_select(@dflights) %>
      </select>
    </div>

    <div class="col">
      <select name="arrival_airport" class="form-select" aria-label="Default select example">
        <option selected disabled>Arrival Airport</option>
        <%= options_for_select(@aflights) %>
      </select>
    </div>

    <div class="col">
      <select name="passengers" class="form-select" aria-label="Default select example">
        <option selected disabled>Number of Passengers</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
      </select>
    </div>

    <div class="col">
      <div class="d-flex justify-content-end">
        <%= date_field_tag 'dates', min: Date.today %>
      </div>
    </div>
    <div class="col">
      <div class="d-flex justify-content-start">
        <%= submit_tag("Search", class: 'btn btn-primary') %> 
      </div>
    </div>

  <% end %>
  </div>
</div>
