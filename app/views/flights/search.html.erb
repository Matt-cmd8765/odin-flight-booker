<h1>Select Your Flight</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <select name="departure_airport" id="dropdown">
    <option selected disabled>Departure Airport</option>
    <%= options_for_select(@dflights) %>
  </select>
  <select name="arrival_airport" id="dropdown">
    <option selected disabled>Arrival Airport</option>
    <%= options_for_select(@aflights) %>
  </select>
  <select name="passengers" id="passengers">
    <option selected disabled>Number of Passengers</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
  </select>
<%= date_field_tag 'dates', min: Date.today %>
<%= submit_tag("Search") %>

<% end %>

<% @search_flights.each do |flight| %>
    <div id='flight_info'>
        <p>
        <strong>Departure Airport:</strong>
        <%= flight.departure_airport.code %>
        </p>

        <p>
        <strong>Arrival Airport</strong>
        <%= flight.arrival_airport.code %>
        </p>

        <p>
        <strong>Start Time</strong>
        <%= flight.start %>
        </p>

        <p>
        <strong>Flight Length</strong>
        <%= flight.flight_duration %> hours
        </p>
    </div>
<% end %>


